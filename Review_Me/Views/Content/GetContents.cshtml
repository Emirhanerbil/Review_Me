@using EntityLayer.Concrete
@model ContentSellerUser


@{
    Layout = null;
}


<link href = "~/lib/bootstrap/dist/css/bootstrap.css" rel = "stylesheet"/>
<link rel="icon" type="image/x-icon" href="~/favicon.ico">





<table class = "table table-bordered" >
    <tr>    
        <th>Id</th>
        <th>Başlık</th>
        <th>İçerik</th>
        <th>Atan kişi</th>
        <th>Atılan kişi</th>
        <th>Tarih</th>
        <th>Sil</th>

    </tr>
    @foreach (var item in Model.Contents)
    {
        
        <tr>
            <td>@item.ContentID</td>
            <td>@item.Title</td>
            <td>@item.ContentText</td>

            <td>@item.User.UserFirstName</td>
            <td>@(item.Seller?.SellerName ?? "N/A")</td>
            <td>@item.ContentDate.ToShortDateString()</td>
            <td><a href="/Content/Remove/@item.ContentID" class="btn btn-outline-danger">Sil</a></td>

            <td>@item.UserID</td>
            <td>@item.SellerID</td>
            
            <td><a href="#" class "btn btn-warning">Detaylar</a></td>
            <td><a href="#" class "btn btn-danger">Sil</a></td>

            
            
        </tr>
    }
</table>
<a href="/Content/AddContent" class="btn btn-outline-info">Yeni Content Ekle</a>
<a href="/Content/Search" class="btn btn-outline-info">Ara</a>




